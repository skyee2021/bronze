
<div class="container">


  <h1 class="mb-3 text-center fw-bold"><%= t("edit_user") %></h1>

  <div class="d-flex justify-content-center align-items-center">
    <div class="user-form-container mt-5 border border-dark p-5 w-50">
      <%= simple_form_for current_user do |f| %>
        
        <%= f.input :email, disabled: true, label: t("email"), input_html: {class: "form-control"} %>
        <%= f.input :password, label: t("password"), input_html: {class: "form-control"} %>
        <%= f.input :password_confirmation, label: t("password_confirmation"), input_html: {class: "form-control"} %>
        <%= f.button :submit, class: "btn btn-danger my-3" %>
        <%= link_to t("back_to_mission_list"), missions_path, class: "btn btn-outline-danger mx-3" %>
      <% end %>
    </div>
  </div>

</div>