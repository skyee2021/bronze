<h1 class="mb-3 text-center fw-bold"><%= t("user_sign") %></h1>

  <div class="d-flex justify-content-center align-items-center">
    <div class="user-form-container mt-5 border border-dark p-5 w-75">
      <%= simple_form_for(@user) do |f| %>
        <% if @user.errors.any? %>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>

      <div class="field">
        <%= f.input :email, label: t("email"), input_html: {class: "form-control"} %>
      </div>

      <div class="field">
        <%= f.input :password, label: t("password"), input_html: {class: "form-control"} %>
      </div>

      <div class="field">
        <%= f.input :password_confirmation, label: t("password_confirmation"), input_html: {class: "form-control"} %>
      </div>

      <%= f.button :submit, class: "btn btn-danger my-3" %>
    <% end %>
    <%= link_to t('back_mission_list'), missions_path, class: "btn btn-outline-primary" %>
    </div>
  </div>
</div>