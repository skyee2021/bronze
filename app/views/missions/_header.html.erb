<% if user_loged_in? %>
  <%= link_to current_user.email, edit_user_path(current_user), class: "btn btn-light" %>
  
  <%= link_to t('log_out'), log_out_sessions_path, method: 'delete', class: "btn btn-outline-light" %>
<% else %>
  <%= link_to t('sign_in'), sign_up_users_path, class: "btn btn-light" %> |
  <%= link_to t('log_in'), log_in_sessions_path, class: "btn btn-light" %>
<% end %>