<div class="container">
 

  <h1 class="mb-3 text-center fw-bold"><%= t("edit_user") %></h1>

  <div class="d-flex justify-content-center align-items-center">
    <div class="user-form-container mt-5 border border-dark p-5 w-50 input-group">
      <%= simple_form_for @user, url: qqaazzxxssww_user_path do |f| %>
        <%#= f.input :email, label: t("email"), input_html: {class: "form-control"} %>
        <%= f.label t("email"), class: "" %>
        <%= f.text_field :email, class: "form-control" %> 
        <%#= f.input :password, label: t("password"), input_html: {class: "form-control"} %>
        <%#= f.input :password_confirmation, label: t("password_confirmation"), input_html: {class: "form-control"} %>
        <div class="my-2">
          <%= f.label t('role'), class: "" %>
          <div>
          <%= f.select :role, options_for_select([[t("enums.role.member"), "member"],
                                                 [t("enums.role.admin"), "admin"]]),
                                                 {class: "role_select"} %>

          </div>
        </div>
        <%= f.button :submit, class: "btn btn-danger my-3" %>
        <div>
          <%= link_to t("back_userlist"), qqaazzxxssww_users_path, class: "btn btn-outline-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>