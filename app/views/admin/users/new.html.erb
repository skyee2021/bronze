<div class="container">
  <h1 class="mb-3 text-center fw-bold"><%= t("new_user") %></h1>

  <div class="d-flex justify-content-center align-items-center">
    <div class="user-form-container mt-5 border border-dark p-5 w-50">
      <%= simple_form_for @user, url: qqaazzxxssww_users_path do |f| %>
        <%= f.input :email, label: t("email"), input_html: {class: "form-control"} %>
        <%= f.input :password, label: t("password"), input_html: {class: "form-control"} %>
        <%= f.input :password_confirmation, label: t("password_confirmation"), input_html: {class: "form-control"} %>
        <%= f.button :submit, t("new_user"), class: "btn btn-danger my-3" %>
        <div>
          <%= link_to t("back_userlist"), qqaazzxxssww_users_path, class: "btn btn-outline-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>